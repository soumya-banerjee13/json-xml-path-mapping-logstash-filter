<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="LOG_PATTERN">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="logFolderPath">${java.io.tmpdir}</Property>
        <Property name="loggingMaxHistory">10</Property>
        <Property name="logLevel">DEBUG</Property>
    </Properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <RollingFile name="fileLogger" fileName="${logFolderPath}/json-xml-path-filter.log" filePattern="${logFolderPath}/json-xml-path-filter-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="${loggingMaxHistory}"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="edu.soumya.logstash.filter" level="${logLevel}" additivity="true">
            <appender-ref ref="fileLogger" level="${logLevel}" />
        </Logger>
        <Root level="${logLevel}" additivity="false">
            <appender-ref ref="fileLogger" />
            <!-- <appender-ref ref="console" /> -->
        </Root>
    </Loggers>
</Configuration>